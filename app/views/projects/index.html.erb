<h1>My Clean Energy Projects</h1>

<%= link_to 'Submit New Project Idea', new_project_path, class: "btn btn-large btn-success" %><br>

<table class="table table-hover">
  <tr>
    <th>Vote</th>
    <th>Creator</th>
    <th>Idea</th>
    <th>Address</th>
    <th>Zipcode</th>
    <th>Problem</th>
    <th>Solution</th>
    <th>Attachments</th>
    <th>Tags</th>
    <th>Created</th>
    <th>Show</th>


    <th>Edit</th>
    <th>Delete</th>

    

  </tr>

  <% @projects.each do |project| %>
    <tr>
      <td>
        <div id='<%= "voting_#{project.class.to_s}_#{project.id}" %>'>
          <%= render :partial => "shared/voting", :locals => {:object => project} %>
        </div>
      </td>
      <td><%= link_to project.user.name, user_path(project.user) %></td>
      <td><%= project.idea %></td>
      <td><%= project.address %></td>
      <td><%= project.zipcode %></td>
      <td><%= project.problem %></td>
      <td><%= project.solution %></td>
      <% if project.image.present? %>
        <td>Yes</td>
      <% else %>
        <td> None </td>
      <%end%>
      <%if project.tag_list.present?%>
        <td><%= raw project.tag_list.map { |t| link_to t}.join(",")%></td>
      <%else%>
        <td> None </td>
      <%end%>
      <td><%= time_ago_in_words(project.created_at) %> ago.</td>
      <td><%= link_to 'Show', project, class: "btn btn-primary" %></td>

      <% if current_user == project.user %>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      <% end %>
      
    </tr>
  <% end %>
</table>




