<!--New Project-->

<% if user_signed_in? %>
	<div class="row-fluid">
	  <div class="span10 offset1">	
		
			<div class="hero-unit">
				<h2><%= current_user.name %>, bring your clean energy project to life!
				Please fill out the following with as much detail as you can.</h2>
				
					<%= render 'form' %>
				
			</div>
		</div>
	</div>

<% else %>

	<div class="container">
		<form class="form-signin">
			<legend>Please Plug-In to Play</legend>
			<ul>
				
				<li class="btn btn-large btn-block btn-success plug_in_to_play">
					<%= link_to("Sign Up", new_user_registration_path) %>
				</li>
				
				<br>
				
				<li class="btn btn-large btn-block btn-success plug_in_to_play">
					<%= link_to("Plug In", new_user_session_path)%>
				</li>
				
			</ul>
		</form>
	</div>
<% end %>